<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                   <!-- <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>-->
                    <li>@Html.ActionLink("Patient Registration", "registerpatient", "PatientRegistration")</li>
                    <li>@Html.ActionLink("OutPatient Management", "ActionOutpatient", "OutpatientManagement")</li>
                    <li>@Html.ActionLink("Laboratory Management", "ActionLaboratoryManagement", "LaboratoryManagement")</li>
                    <li>@Html.ActionLink("Radiology Management", "ActionRadiologyManagement", "RadiologyManagement")</li>
                    <li>@Html.ActionLink("Store Management", "ActionStoreManagement", "StoreManagement")</li>
                    <!--<li>@Html.ActionLink("Consultation Management", "ActionConsultationManagement", "ConsultationManagement")</li>
                    <li>@Html.ActionLink("Accounts Management", "ActionAccountsManagement", "AccountsManagement")</li>
                    <li>@Html.ActionLink("Pharmacy Management", "ActionPharmacyManagement", "PharmacyManagement")</li>
                    <li>@Html.ActionLink("In-patient Billing", "ActionInPatientBilling", "InPatientBilling")</li>
                    <li>@Html.ActionLink("In-patient Management", "ActionInPatientManagement", "InPatientManagement")</li>-->
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
